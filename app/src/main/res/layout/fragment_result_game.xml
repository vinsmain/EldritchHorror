<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="2dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/activityResultHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_span="3"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="@string/activity_result_party_header"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="16sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="8dp">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_span="3"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="8dp"
                                android:text="TextView"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.0" />

                            <ToggleButton
                                android:id="@+id/ParamToggleButton"
                                android:layout_width="70dp"
                                android:layout_height="30dp"
                                android:layout_marginBottom="0dp"
                                android:layout_marginRight="0dp"
                                android:background="@drawable/toggle_selector"
                                android:textOff=""
                                android:textOn=""
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="0dp" />
                        </android.support.constraint.ConstraintLayout>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/gatesCountHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/gatesCount"
                            android:textColor="@color/colorSecondaryText" />

                        <EditText
                            android:id="@+id/gatesCount"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="@string/zero"
                            android:inputType="number"
                            android:maxLength="2"
                            android:selectAllOnFocus="false"
                            android:textAlignment="center"
                            android:textColor="@color/colorSecondaryText"
                            android:textColorHint="@drawable/text_hint_selector" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/monstersCountHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/monstersCount"
                            android:textColor="@color/colorSecondaryText" />

                        <EditText
                            android:id="@+id/monstersCount"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="@string/zero"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textAlignment="center"
                            android:textColor="@color/colorSecondaryText"
                            android:textColorHint="@drawable/text_hint_selector" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/curseCountHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/curseCount"
                            android:textColor="@color/colorSecondaryText" />

                        <EditText
                            android:id="@+id/curseCount"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="@string/zero"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textAlignment="center"
                            android:textColor="@color/colorSecondaryText"
                            android:textColorHint="@drawable/text_hint_selector" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/rumorsCountHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/rumorsCount"
                            android:textColor="@color/colorSecondaryText" />

                        <EditText
                            android:id="@+id/rumorsCount"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="@string/zero"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textAlignment="center"
                            android:textColor="@color/colorSecondaryText"
                            android:textColorHint="@drawable/text_hint_selector" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/cluesCountHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/cluesCount"
                            android:textColor="@color/colorSecondaryText" />

                        <EditText
                            android:id="@+id/cluesCount"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="@string/zero"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textAlignment="center"
                            android:textColor="@color/colorSecondaryText"
                            android:textColorHint="@drawable/text_hint_selector" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/blessedCountHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/blessedCount"
                            android:textColor="@color/colorSecondaryText" />

                        <EditText
                            android:id="@+id/blessedCount"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="@string/zero"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textAlignment="center"
                            android:textColor="@color/colorSecondaryText"
                            android:textColorHint="@drawable/text_hint_selector" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/doomCountHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/doomCount"
                            android:textColor="@color/colorSecondaryText" />

                        <EditText
                            android:id="@+id/doomCount"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="@string/zero"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textAlignment="center"
                            android:textColor="@color/colorSecondaryText"
                            android:textColorHint="@drawable/text_hint_selector" />

                    </TableRow>

                </TableLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>